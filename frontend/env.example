# ===========================================
# QueueMe Frontend Environment Configuration
# ===========================================

# Backend API Configuration
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000/api

# Application Configuration
NEXT_PUBLIC_APP_NAME=QueueMe
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Professional Barbershop Queue Management System

# Environment
NODE_ENV=development
NEXT_PUBLIC_NODE_ENV=development

# Authentication
NEXT_PUBLIC_JWT_STORAGE_KEY=admin_token
NEXT_PUBLIC_AUTH_REDIRECT_PATH=/admin/dashboard

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# Feature Flags
NEXT_PUBLIC_ENABLE_SMS_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_PRIMARY_COLOR=blue
NEXT_PUBLIC_SHOW_DEBUG_INFO=false

# Business Configuration
NEXT_PUBLIC_BUSINESS_NAME=QueueMe Barbershop
NEXT_PUBLIC_BUSINESS_PHONE=+1-555-0123
NEXT_PUBLIC_BUSINESS_EMAIL=info@queueme.com
NEXT_PUBLIC_BUSINESS_ADDRESS=123 Main St, City, State 12345

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/queueme
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/queueme
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/queueme

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CDN Configuration (for production)
NEXT_PUBLIC_CDN_URL=https://cdn.queueme.com
NEXT_PUBLIC_IMAGE_BASE_URL=https://images.queueme.com

# Cache Configuration
NEXT_PUBLIC_CACHE_DURATION=300000
NEXT_PUBLIC_STATIC_CACHE_DURATION=86400000

# Development Tools
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
NEXT_PUBLIC_LOG_LEVEL=info

# Security
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HSTS_ENABLED=false

# Performance
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr

# Payment Integration (if needed)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id

# Map Integration (if needed)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Queue Configuration
NEXT_PUBLIC_DEFAULT_QUEUE_REFRESH_INTERVAL=30000
NEXT_PUBLIC_MAX_QUEUE_DISPLAY_COUNT=50

# Notification Configuration
NEXT_PUBLIC_ENABLE_BROWSER_NOTIFICATIONS=true
NEXT_PUBLIC_NOTIFICATION_PERMISSION_REQUIRED=true
